# Blue Tradie Environment Variables (Development)
# Copy this to .env and fill in your values

# === AI Services ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude (for automation & tax suggestions)
ANTHROPIC_API_KEY=sk-ant-...

# === Email & SMS ===
SENDGRID_API_KEY=
EMAIL_FROM_NAME=Blue Tradie
EMAIL_FROM_ADDRESS=noreply@bluetradie.com

# Twilio (optional - SMS features will gracefully skip if not present)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=

# === Database & Caching ===
DATABASE_URL=postgresql://user:password@localhost:5432/bluetradie
REDIS_URL=redis://localhost:6379

# Redis (for Bull job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === Storage (S3 or GCS) ===
STORAGE_PROVIDER=s3
S3_BUCKET=
S3_REGION=ap-southeast-2
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# === Application ===
APP_URL=http://localhost:3000
APP_DOMAIN=localhost
NODE_ENV=development

# Session
SESSION_COOKIE_NAME=bt_sess
SESSION_TTL_DAYS=30
MAGIC_LINK_TTL_MINUTES=15

# Webhooks
WEBHOOK_SECRET_RANDOM=generate_random_32_char_string

# === Payments (Stripe) ===
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# === Integrations ===
# Xero (use sandbox credentials first)
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=
XERO_REDIRECT_URI=http://localhost:3000/api/auth/xero/callback

# Google Maps (optional - for route optimization)
GOOGLE_MAPS_API_KEY=

# === Compliance (AU/NZ) ===
BUSINESS_ABN=
BUSINESS_ADDRESS=

# === Monitoring (Optional) ===
SENTRY_DSN=
LOG_LEVEL=info

# === Feature Flags ===
FEATURE_AI_ADVISORS=true
FEATURE_AUTOMATION=true
FEATURE_VOICE_PREVIEW=false

# === PWA / Push Notifications ===
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# === Rate Limiting ===
AI_RATE_LIMIT_HOURLY=50
AUTOMATION_RATE_LIMIT_DAILY=100

# === File Uploads ===
MAX_FILE_SIZE_MB=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
